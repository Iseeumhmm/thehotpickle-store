{% if categories %}

<div class="container">
  <div class="row">
    {% for category in categories %}
    <div class="col-md-6 col-lg-3">
      <div class="card card-menu">
        <img class="card-img-top" src="image/{{category.image}}" alt="{{category.name}}">
        <div class="card-body">
          <h5 class="card-title">{{category.name}}</h5>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endif %} 